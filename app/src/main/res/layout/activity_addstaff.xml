<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".addstaff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Add staff  -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins"
                android:text="@string/add_staff"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="244dp" />
            <!-- slogan -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/poppins"
                android:text="@string/once_you_add_staff_you_can_manage_staff_and_attendance_track_sales_and_incentive_and_pay"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="244dp" />

            <!-- name input -->
            <EditText
                android:id="@+id/name"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_baseline_account_circle_24"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Name"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />

            <!-- Email input -->
            <EditText
                android:id="@+id/email"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />

            <!-- Password  -->
            <EditText
                android:id="@+id/passwordstaff"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFF"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Phone number input -->
            <EditText
                android:id="@+id/phone"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Phone"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />
            <!-- DOB number input -->
            <EditText
                android:id="@+id/dob"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="DOB       YYYY/MM/DD"
                android:inputType="date"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />

            <!-- Qualification input -->
            <EditText
                android:id="@+id/qualification"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_baseline_local_library_24"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Qualification"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />

            <!-- Address input -->
            <EditText
                android:id="@+id/address"
                android:layout_width="303dp"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Address"
                android:inputType="text"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />

            <!-- submit button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_width="303dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/poppins"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="397dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
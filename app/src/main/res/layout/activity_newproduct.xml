<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".newproduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Product name -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppinsblack"
                android:text="Add product"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="244dp" />
            <!-- slogan -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/poppins"
                android:text="@string/once_you_add_staff_you_can_manage_staff_and_attendance_track_sales_and_incentive_and_pay"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="244dp" />

            <!-- product name input -->
            <EditText
                android:id="@+id/productname"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_briefcase_alt"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Product Name"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />

            <!-- product ID input -->
            <EditText
                android:id="@+id/productid"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_tag"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Product ID"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />

            <!-- Priceinput -->
            <EditText
                android:id="@+id/productprice"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_usd_circle"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Price"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />



            <!-- Address input -->
            <EditText
                android:id="@+id/productquantity"
                android:layout_width="303dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFFFF"
                android:drawableStart="@drawable/ic_plus_square"
                android:drawablePadding="5dp"
                android:elevation="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Quantity"
                android:inputType="number"
                android:padding="7dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="266dp" />


            <!-- submit button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitbutton"
                android:layout_width="303dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/poppins"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="397dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
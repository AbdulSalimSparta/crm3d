<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Crm3d" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFAD0D</item>
        <item name="colorPrimaryVariant">#FFAD0D</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFAD0D</item>
        <item name="colorSecondaryVariant">#FFAD0D</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FFAD0D</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Crm3d.Font" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.Crm3d.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Crm3d.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Crm3d.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>